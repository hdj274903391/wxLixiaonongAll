.top{
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 3px;
  position: fixed;
  z-index: 3;
  background: white;
}
.top>view{
  display: flex;
  align-items: center;
  height: 36px;
  text-align: center;
  line-height: 36px;
}
.originRight{
  font-size: 15px;
  width: 71px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.search{
  background: #f0f0f0;
  height: 36px;
  border-radius: 5px;
  width: 258px;
  font-size: 15px;
  display: flex;
  align-items: center;
  margin-right: 5px;
}
.content{
  display: flex;
  width: 100%;
  margin-top: 40px;
}
.kindsList{
  width: 20%;
  background: #fafafa;
  height: calc(100vh - 40px);
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.secondKindsList{
  width: 80%;
}
.kindsItem{
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}
.kindsItem1{
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  background: white;
}
.kindsItem1  .kindsItemContent{
  height: 25px;
  line-height: 25px;
  width: 100%;
  color: #ff4c4d;
  text-align: center;
  border-left: 2px solid #ff4c4d;
}
.secondKindsList{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.secondKindsList>image{
  margin-top:15px;
}
.secondeNavigationTitle{
  width:150px;
  border-bottom: 1px solid rgba(220,220,220,0.8);
  text-align: center;
  font-size: 12px;
  line-height: 30px;
  margin-top:5px;
}
.secondKindsContent{
  width: 90%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 10px;
  justify-content: flex-start;
  align-content: flex-start;
}
.secondKindsItem{
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 5px 0;
  
}
.secondKindsItemImg{
  width: 60px;
  height: 60px;
}
.secondKindsItemName{
  font-size: 14px;
  text-align: center;
}