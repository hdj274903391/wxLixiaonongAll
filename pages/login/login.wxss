.content{
  width: 240px;
  font-size: 12px;
  color: #959595;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.form{
  width: 100%;
  height: 100vh;
  display: flex;
  margin-top: 50px;
  justify-content: center;
 
}
.inputView{
  width: 100%;
  height: 42px;
  border-bottom:1px solid #cdcdcd; 
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.logo{
  width: 150px;
} 
.send{
  width: 66px;
  height: 26px;
  background:  linear-gradient(to right,#fe8657,#ff4e4d);
  color: white;
  text-align: center;
  line-height: 26px;
  font-size: 10px;
  border-radius: 2px;
}
.displayIcon{
  font-size: 20px;
}
.sure{
  width: 100%;
  height: 42px;
  background: #dcdcdc;
  text-align: center;
  line-height: 42px;
  color: white;
  border-radius:5px;
  font-size: 15px; 
  margin-top: 35px;
}
.mark{
  width: 100%;
  background: rgba(00, 00, 00, 0.4);
  height: 100vh;
  display: flex;
  align-items: center;
  line-height: center;
  position: fixed;
}