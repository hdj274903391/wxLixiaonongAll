page{
  background: #f0f0f0;
}
.contaier{
  border-top: 1px solid #cdcdcd;
}
.allList{
  width: 100%;
  padding-left: 4%;
  background: white;
  margin-bottom: 5px;
}
.list{
  box-sizing: border-box;
  width: 96%;
  border-bottom:1px solid #f0f0f0;
  height: 60px;
  font-size: 15px;
  line-height: 60px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 4%;
}

.introduce{
  font-size:12px;
  color:#959595;
  line-height:20px;
  height:60px;
  width: 96%;
  box-sizing: border-box;
  padding-right: 2%;
  padding-top: 5px;
  padding-bottom: 5px;
  
}
.arrow{
  width: 10px;
  height: 10px;
  border-right: 1px solid #cdcdcd;
  border-bottom: 1px solid #cdcdcd;
  transform: rotate(-45deg);
  
}
.topBtn{
  width: 60px;
  height: 30px;
  border: 1px solid #f0f0f0;
  text-align: center;
  line-height: 30px;
  display: inline-block;
  margin-left:10px;
}
.topBtnSelect{
  width: 60px;
  height: 30px;
  border: 1px solid #ff4c4d;
  text-align: center;
  line-height: 30px;
  display: inline-block;
  margin-left:10px;
  color: #ff4c4d;
}
.notice{
  width: 100%;
  box-sizing: border-box;
  padding:0 4%;
  font-size: 12px;
  color: #959595;
}
.notice>view{
  line-height:20px; 
  letter-spacing: 1px;
}
.noticeView{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 20px;
}
.noticeBtn{
  width: 110px;
  height: 30px;
  border: 1px solid #cdcdcd;
  text-align: center;
  line-height: 30px;
  color: #464646;
}
.sureBtn{
  position: absolute;
    width: 100%;
    height: 45px;
    background: #ff4c4d;
    color: white;
    text-align: center;
    line-height: 45px;
   bottom: 0px;
    border-top: 3px solid white;
    font-size: 15px;
}
.marker{
  width: 100%;
  height: 100vh;
  background: rgba(000, 000, 000, 0.4);
  position: fixed;
  top: 0;
}
.invoicesType{
  width: 100%;
  box-sizing: border-box;
  padding-left: 4%;
  background: white;
  height: 40%;
  position: absolute;
  bottom: 0;
}
.invoicesTypeSelect{
  color:#ff4c4d;
}
.invoicesTypeList>view{
  line-height: 40px;
  font-size: 15px;
}
.payInfo{
  width: 96%;
  height: 45px;
  display: flex;
  align-items: center;
  justify-content: space-between;
 float: right;
  border-bottom: 1px solid #f0f0f0;
  box-sizing: border-box;
  padding-right: 15px;
  font-size: 15px;
}
.payInfo>text{
  float: right;

  border-bottom: 1px solid #f0f0f0;
  box-sizing: border-box;
  padding-right: 15px;
}
.payInfo>text{
  float: right;
}.arrow{
  border-top: 1px solid #797979;
