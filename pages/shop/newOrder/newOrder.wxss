page{
  background: #f0f0f0;
}
.container{
  border-top: 1px solid #f0f0f0;
  align-items: flex-end;
  background: white;
  padding-bottom: 35px;
}
.getType{
  background: white;
  height: 45px;
  width: 100%;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
}
.getType>view{
  width: 50%;
  height:43px;
  text-align: center;
  line-height: 45px;
  font-size: 15px;
 
}
.selectGetType{
border-bottom: 2px solid #ff4c4d;
}
.itemContent{
  width: 96%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50px;
  /* margin-top: 8px;
  margin-bottom: 20px; */
}
.itemContent>view{
  display: flex;
  font-size: 15px;
  color:#454545; 
  height: 40px;
}
.itemContent>view>view{
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}

.itemLeft>text{
  width: 65px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.current{
  width: 35px;
  height: 18px;
  background: #ff4c4d;
  font-size: 10px;
  color: white;
  text-align: center;
  line-height: 18px;
  border-radius: 2px;
}
.address{
  font-size: 12px;
  color: #797979;
}
.arrow{
  border-top: 1px solid #797979;
  border-right: 1px solid #797979;
  transform: rotate(45deg);
  margin-right:4.17%; 
  width:8px;height:8px;
}
.bottomLine{
  width: 100%;
  height: 5px;
  background: #f0f0f0;
}
.contentList{
  width: 96%;
  padding-top: 15px;
 
}
.title{
  width: 96%;
  height: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 10px;

}
.title>view{
  display: flex;
  justify-content: space-between;
  align-items: center;
 
}
.titleLeft>view{
  width: 3px;
  height: 20px;
  border-radius: 3px;
  background: red;
}
.titleLeft>text{
 font-size: 15px;
 margin-left: 10px;
}
.titleRight>view:nth-child(1){
  font-size: 12px;
  color: red;
  display: flex;

}
.shopList{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.shopItem{
  display: flex;
  border-top: 1px solid #f0f0f0;
  padding-top: 15px;
  padding-bottom: 15px;
}
.shopImg{
  width:90px;
  height: 90px;
  border-radius: 5px;
  background: #f0f0f0; 
}
.shopInfo{
  display: flex;
  margin-left: 10px;
  flex-direction: column;
   font-size: 15px;
  flex-grow: 2;
}
.shopName{
 margin-top: 2px;
}
.shopNum{
  font-size: 12px;
  color: #787878;
  margin-top: 5px;
}
.shopPrice{
  margin-top: 20px;
}
.pay{
  width: 100%;
  margin-left: 20px;
  font-size: 15px;
}
.payInfo{
  width: 96%;
  height: 45px;
  display: flex;
  align-items: center;
  justify-content: space-between;
 float: right;
  border-bottom: 1px solid #f0f0f0;
  box-sizing: border-box;
  padding-right: 15px;
}
.payInfo>text{
  float: right;
}

.list{width: 96%;
  border-bottom:1px solid #f0f0f0;
  height: 45px;font-size: 15px;
  line-height: 60px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.list>view>text:nth-child(1){
  font-size: 25px;
}
.list>view>text{
  vertical-align: middle;
  margin-right: 10px;
  color:#999 ;
}
.sure{
  width: 20px;
  height: 20px;
  border-radius:50%; 
  right:4.17%;
  position: relative;
  border: 1px solid #999;
}
.selectPay{
  position: absolute;
  top: -9px;
  right: -1px;
  display: block;
}
.selectPayNone{
  position: absolute;
  top: -9px;
  right: 0px;
  display: none;
}
.canUseCardsNum{
  display:flex;
  align-items: center;
  font-size: 15px;
  height: 100%;
}
.canUseCardsNum>view{
  flex-shrink: 0;
  line-height: 20px;
}
.goPayBtn{
  background:linear-gradient( to right,#fe8657,#ff4c4d);
}
.goPay{
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: red;
  font-size: 15px;
  position: fixed;
  bottom: 0;
  background: white;
}
.goPay>view{
  width: 115px;
  height: 50px;
  line-height: 50px;
  color: white;
  text-align: center;
}
.addressImg{
  height: 5px;
  width: 100%;
}
.attention{
  width: 100%;
  height: 40px;
  background: #fff4da;
  text-align: center;
  line-height: 40px;
  color: #f29629;
  font-size: 14px;
}
.getUserInfo{
  width: 100%;
  height: 100vh;
  background: rgba(00,00,00,.4);
  position: absolute;
  top:0;
  z-index: 999;
}
.getUserInfoBtn{
  position: relative;
  top: 50vh;
  margin: 0 auto;
  width: 200px;
}
.picker{
  white-space: nowrap;
    background-color: #FFFFFF;
}
