.container{
  border-top: 1px solid #f0f0f0;
}
.content{
  width: 94%;
  margin-top: 10px;
  height: 300px;
}
.user{
  width: 100%;
  display: flex;
  align-items: center;
}
.userPhoto{
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.userInfo{
  margin-left: 5px;
}
.userName{
  font-size: 14px;
}
.userTitle{
  font-size: 11px;
  color: #b5b5b5;
}
.goodsInfo{
  margin-top: 10px;
  padding: 10px;
  display: flex;
  border: 1px solid #f0f0f0
}
.goodsImage{
  width: 80px;
  height: 80px;
  flex-shrink: 0;
}
.goodsDetail{
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goodsName{
  font-size: 14px;
  color: #646464;
}
.goodsPeopleNum{
  font-size: 12px;
}
.goodsSprice{
  font-size: 12px;
  color: #b5b5b5;
  
}
.share{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.shareTitle{
  display: flex;
  font-size: 12px;
  color: #646464;
  margin-top: 10px;
}
.shareNum{
  display: flex;
  margin-top: 20px;
}
.shareNum>view{
  width: 40px;
  height:40px;
  border-radius: 50%;
  border: 2px dashed #f0f0f0;
  margin-left: 10px;
  position: relative;
}
.shareNum>view>image{
  border-radius: 50%;
  width: 100%;
  flex-shrink: 0;
}
.headGroup{
  display: none;
  width: 30px;
  height: 15px;
  border-radius: 20px;
  text-align: center;
  line-height: 15px;
  background: #ff4c4d;
  border: 1px solid #ff4c4d;
  color: white;
  font-size: 10px;
  position: relative;
  margin-left: 5px;
  flex-shrink:0; 
}
.shareNumView{
 display: flex;
 flex-direction: column;

}
.shareNum>view:nth-child(1)>view{
  display: block;
}
.shareNum>view:nth-child(1){
  border: 2px solid #ff4c4d;
  background: #cdcdcd;
  margin: 0;
}
.shareBtn{
  width: 100%;
  height: 37px;
  color: white;
  text-align: center;
  line-height: 37px;
  font-size: 12px;
  background: #ff4c4d;
  margin-top: 20px;
  border-radius: 2px;
}
.bottomLine{
  width: 100%;
  height: 5px;
  background: #f0f0f0;
  margin-top: 20px;
}
.hotGoods{
 width:94%;
 display: flex;
 flex-wrap: wrap;
 flex-direction: column;
}
.hotTitle{
  width: 100%;
  font-size: 18px;
  height: 55px;
  text-align: center;
  line-height: 55px;
}
.goodsList{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.goodsItem{
  width: 48.5%;
  margin-bottom: 25px;
}
.goodsItem>view{
  margin-top: 5px;
}
.goodsImg{
  width:100%;
  background: #f0f0f0;
  border-radius: 5px;
  border: 1px solid #f0f0f0;
}
.goodsName{
  font-size: 15px;
  width: 165px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goodsUnit{
  font-size: 12px;
  color: #cdcdcd;
  width: 100%;
  overflow: hidden;text-overflow: ellipsis;
  white-space: nowrap;
}
.goodsPrice{
  font-size: 12px;
  color: #b5b5b5;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}
.mark{
  width: 100%;
  height: 100%;
  top:0;
  position: fixed;
  z-index: 1200;
  background: rgba(00, 00, 00, 0.4)
}
.goodsSkuView{
  width: 100%;
  background: white;
  padding: 15px 4%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  height: 50vh;
  justify-content: space-around;
  
}
.goodsSkuNum{
  display: flex;
  width: 100%;
  justify-content: space-between;
  font-size: 15px;
  align-items: center;
}
.setNum{
  display: flex;
  font-size: 12px;
}
.disable{
 color: #fe8256;
}
.setNum>text ,.setNum>input{
  border-bottom: 1px solid #cdcdcd;
  border-top: 1px solid #cdcdcd;
  border-left: 1px solid #cdcdcd;
  width: 37px;
  height: 30px;
  text-align: center;
  line-height: 30px;
 
}
.setNum>text:nth-child(1){
  border-radius: 2px;
}
.skuBtn{
  height: 45px;
   background:linear-gradient(to right,#fe8657,#ff4c4d);
   width: 100%;
   text-align: center;
   line-height: 45px;
   color: white;
   border-radius: 2px;
   font-size: 15px;
}