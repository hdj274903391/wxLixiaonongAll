page{
  background: #f0f0f0;
}
.container{
  border-top: 1px solid #cdcdcd;
  background: #f0f0f0;
  justify-content: flex-start;
}
.all{
  width: 100%;
  display: flex;
  flex-direction: column;
   align-items: flex-end;
  justify-content: flex-start;
  background: white;
 height: 348px;
}
.content{
  width: 100%;
  border-top: 4px solid #f0f0f0;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  background: white;
  flex-shrink: 0;
}
.shopInfo{
  width: 96%;
  padding-top: 15px;
  display: flex;
  align-items: center;
  font-size: 12px;
  color:#787878; 
  background: white;
}
.shopImg{
  width: 75px;
  height: 75px;
  border-radius: 5px;
  background: #f0f0f0; 
}
.shopName{
  width: 210px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 15px;
  color: #464646;
 
}
.scale{
  display: flex;
  width: 96%;
  align-items: center;
  font-size: 15px;
  justify-content: flex-start;
  margin: 15px 0;
  flex-shrink: 0;
}
.scale>view>text{
  margin-left: 5px;
}
.textarea{
  width: 92%;
  font-size: 15px;
  padding: 15px 15px 15px 0;
  margin-left: 15px;
  background: white;
  height: 90px;
  flex-shrink: 0;
}
.submit{
  width: 90px;
  height: 35px;
  border:1px solid #464646;
  text-align: center;
  line-height: 35px;
  border-radius: 2px;
}
.bottom{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 15px;
  background: white;
  border-top: 1px solid #f0f0f0;
  align-items: center;
  box-sizing: border-box;
  padding: 0 4%;

}
.addImg{
  width: 96%;
  border-bottom: 1px solid #f0f0f0;
  flex-shrink: 0;
}
.addBtn{
  width: 75px;
  height: 75px;
  margin-bottom: 5px;
}
.tui-preview-img{
 width: 75px;
 height: 75px;
 margin-bottom:5px;
}
.tui-content>image{
  margin-right:5px;
}
.anonymousView{
  display: flex;
  color: #cdcdcd;
  align-items: center;
  height: 47px;
}
.anonymousBtn{
  width: 20px;
  height: 20px;
  border: 1px solid #cdcdcd;
  margin-right: 5px;
  text-align: center;
  line-height: 20px;
  font-size: 20px;
}