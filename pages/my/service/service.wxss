.container{
  border-top: 1px solid #f0f0f0;
}
.goodsList{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.goodsItem{
  width: 100%;
  display: flex;
  padding: 15px 0;
  padding-left: 30px;
  border-bottom: 5px solid #f0f0f0;
}
.shopImg{
  width:90px;
  height: 90px;
  border-radius: 5px;
  background: #f0f0f0; 
  border: 1px solid #f0f0f0;
}
.shopInfo{
  display: flex;
  width: 60%;
  margin-left: 10px;
  flex-direction: column;
   font-size: 30rpx;
  flex-grow: 2;
}
.shopName{
 margin-top: 2px;
}
.shopNum{
  font-size: 12px;
  color: #787878;
  margin-top: 5px;
}
.select{
  width: 100%;
  display: flex;
  padding-left: 30px;
  height: 65px;
  align-items: center;
  font-size: 12px;
  color: #969696;
  justify-content: space-between;
  border-bottom: 1px solid #f0f0f0;
}
.selectTitle{
  font-size: 15px;
  color: #464646;
  margin-bottom: 5px;
}
.arrow{
  border-top: 1px solid #cdcdcd;
  border-right: 1px solid #cdcdcd;
  width: 8px;
  height: 8px;
  transform: rotate(45deg);
  margin-right: 30px;
}