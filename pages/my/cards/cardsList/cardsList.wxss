page{
  background: #f0f0f0;
}
.container{
  border-top: 1px solid #dcdcdc;
}
.title{
  width: 92%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50px;
  font-size: 15px;
}
.isUse{
  width: 20px;
  height: 20px;
  border: 1px solid #cdcdcd;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}
.cardsList{
  width: 92%;
}
.cardsList>view:nth-child(1){
  margin: 0;
}
.cardsItem{
  margin-top: 10px;
  width: 100%;
  height: 90px;
  display: flex;
  border-radius:2px; 
  background: white;
  align-items: center;
}
.cardsItemImg{
  width:70px;
  height: 70px;
  background: #f0f0f0; 
  margin-left: 10px;
}
.cardsItemInfo{
  margin-left: 10px;
  font-size: 15px;
}
.cardsItemTime{
  font-size: 12px;
  color: #b4b4b4;
  margin-top: 10px;
}