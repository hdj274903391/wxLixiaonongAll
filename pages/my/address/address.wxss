.container{
  border-top: 1px solid #f0f0f0;
}
.addressList{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.addressItem{
  display: flex;
  width: 100%;
  justify-content: center;
  height: 75px;
  border-bottom: 6px solid #f0f0f0;
    position: relative;
}
.itemContent{
  width: 94%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  margin-left: 30rpx;
}
.itemCenter{
  margin-left: 20rpx;
}
.itemContent>view{
  display: flex;
  font-size: 30rpx;
  color:#454545; 
}
.itemContent>view>view{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.itemLeft>text{
  width: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.addressList .addressItem:nth-child(1) .current{
  background: #ff4c4d;
}
.current{
  width: 70rpx;
  height: 18px;
  background: white;
  font-size: 10px;
  color: white;
  text-align: center;
  line-height: 18px;
  border-radius: 2px;
  margin-top: 5px;
}
.address{
  font-size: 12px;
  color: #797979;
  display: inline-block;
  width: 240px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.delate{
  font-size: 20px;
}
.adressImg{
  width: 100%;
  height: 5px;
  position: absolute;
  bottom: 0;
}
.addAddress{
   width: 94%;
  background: linear-gradient(to right,#fe8657,#ff4c4d);
  height: 48px;
  text-align: center;
  line-height: 48px;
  font-size: 15px;
  color: white;
}
.shanchu{
  width:40px;
  height: 100%;
  position: absolute;
  top: 0;
  text-align: center;
  line-height: 75px;
  font-size: 16px;
}
.scroll>view{
  display: inline-block;
}
.bottom{
  width: 100%;
  margin-bottom: 20px;
  padding-left: 6%;
  position:fixed;
  bottom:20px;
  background: white;
  z-index: 99;

}