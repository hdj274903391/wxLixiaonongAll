.selectItem2{
  background: #faefec;
  border: 1px solid #ff4c4d;
  color: #ff4c4d;
   width: 48%;
  height: 90px;
  border-radius: 5px;
  margin-bottom: 15px;
  font-size: 15px;
}

.title{
  margin-top: 10px;
   margin-left: 15px;
}
.title>text{
  font-size: 24px;
}
.giveNum{
  margin-left: 15px;
}
.selectItem1 .giveNum{
  color: #969696;
 
}
.list{width: 90%;
  border-bottom:1px solid #f0f0f0;
  height: 45px;font-size: 15px;
  line-height: 60px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
/* .list>view>image{
  margin-right: 15px;
