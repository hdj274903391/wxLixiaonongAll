  vertical-align: middle;
} */
.list>view>text:nth-child(1){
  font-size: 25px;
}
.list>view>text{
  vertical-align: middle;
  margin-right: 10px;
  color:#999 ;
}
.sure{
  width: 20px;
  height: 20px;
  border-radius:50%; 
  
  position: relative;
  border: 1px solid #999;
}
.selectPay{
  position: absolute;
  top: -9px;
  right: -1px;
  display: block;
}
.selectPayNone{
  position: absolute;
  top: -9px;
  right: 0px;
  display: none;
}
.detail{
  width: 6px;
  height: 6px;
  border-top: 1px solid #999;
  border-right: 1px solid #999;
  transform: rotate(45deg);
  margin-right: 30px;
  display: inline-block;
}
.recharge{
  background: linear-gradient(to right,#fe8657,#ff4c4d);
  color: white;
  font-size: 18px;
  text-align: center;
  line-height: 40px;
  height: 40px;
  width: 92%;

}
.bottom{
  position: absolute;
  bottom: 20px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between
}



