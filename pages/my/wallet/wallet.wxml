
<view class="container">
  <view class='list'>
    <view class='listTittle'>
      余额
    </view>
    <view style='font-size:12px;color:#969696'>我的可用余额</view>
    <view style='width:100%;display:flex; justify-content: flex-end;'>
       <view class='rechargeBtn' bindtap='changeToMoney'>充值</view>
    </view>
    <view class='listContent'>
      <text class='numRest'>¥{{wallet.memberBalance}}</text> 
    </view>
  </view>
   <view class='list' bindtap='handleToScore'>
    <view class='listTittle'>
      积分
    </view>
     <view style='font-size:12px;color:#969696'>积分换购更多优惠</view>
      <view style='width:100%;display:flex; justify-content: flex-end;'>
      <view class='arrow'></view>
      </view>
    <view class='listContent'>
      <text class='numRest'>{{wallet.memberPoint}}</text>
    </view>
  </view>
  
  
</view>
<view class='history' bindtap='handleToAccountList'>交易明细</view>
<view class='bottomLogo'style="position:absolute;bottom:0px;">
        <image  mode='widthFix' style="width:160px;" src=".././../Img/copyright.png"></image>
</view>