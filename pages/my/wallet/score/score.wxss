page{
  background:#f0f0f0;
}

.container{
  border-top: 1px solid #f0f0f0;
  background: white;
}
.content{
  width: 92%;
  padding: 4%;
  height: 120px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.history{
  font-size: 14px;
  color: #b4b4b4;
  line-height: 50px;
  width: 100%;
  text-align: center;

  white-space: 2px;
}

.recharge{
  background: linear-gradient(to right,#fe8657,#ff4c4d);
  color: white;
  font-size: 18px;
  text-align: center;
  line-height: 40px;
  height: 40px;
  width: 92%;

}
.bottom{
  position: absolute;
  bottom: 20px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between
}