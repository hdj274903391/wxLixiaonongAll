.container{
  border-top: 1px solid #cdcdcd;
  height: 100vh;
  background: #f0f0f0;
  justify-content: flex-start;
}
.content{
  width: 100%;
  border-top: 5px solid #f0f0f0;
  border-bottom: 8px solid #f0f0f0;
  background: white;
}
.contentItem{
  width:97%;
  float: right;
  height: 45px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
  font-size: 13px;
  color: #454545;
  background: white;
  padding: 0;
}
button::after{
  border: 0px;
}
.contentItem>view{
  margin-right: 15px;
}
.contentItem:nth-last-child(1){
  border-bottom: 0;
}
.arrow{
  width: 8px;
  height: 8px;
  border-right: 1px solid #cdcdcd;
  border-bottom: 1px solid #cdcdcd;
  transform: rotate(-45deg);
  margin-right: 15px;
}
.out{
  width: 100%;
  height: 50px;
  text-align: center;
  line-height: 50px;
  font-size: 13px;
  color: #454545;
  background: white;
}