.content{
  width: 240px;
  position: relative;
  margin: 0 auto;
  font-size: 12px;
  color: #959595;
  top: 40px;
}
.form{
  width: 100%;
  height: 100%;
}
.inputView{
  width: 100%;
  height: 42px;
  border-bottom:1px solid #cdcdcd; 
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.send{
  width: 66px;
  height: 26px;
  background: #ff4c4d;
  color: white;
  text-align: center;
  line-height: 26px;
  font-size: 10px;
  border-radius: 2px;
}
.displayIcon{
  font-size: 20px;
}
.sure{
  width: 100%;
  height: 42px;
  background: #dcdcdc;
  text-align: center;
  line-height: 42px;
  color: white;
  border-radius:5px;
  font-size: 15px; 
  margin-top: 25px;
}
.icon-logo{
  font-size: 120px;
  background: linear-gradient(to right,#FDAC8C,#FE4E50);
  -webkit-background-clip: text;
  color: transparent;
  text-align: center;
  margin-bottom: 30px;
}