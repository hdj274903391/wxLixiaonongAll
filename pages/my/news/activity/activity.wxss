.container{
  border-top: 1px solid #cdcdcd;
  background: #f0f0f0;
  height: 100vh;
}
.content{
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.contentItem{
  width: 100%;
  position: relative;
}
.title{
  width: 100%;
  height: 40px;
  text-align: center;
  line-height: 40px;
  font-size: 10px;
  color: #b5b5b5;
}
.itemContent{
  width: 100%;
  height: 220px;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.itemTitle{
  line-height: 47px;
  font-size: 18px;
}
.itemImg{
  width: 90%;
  background: #dcdcdc;
  height: 105px;
}
.itemContent .mark{
  background: #7f7f7f;
  text-align: center;
  line-height: 105px;
  color: white;
  font-size: 18px;
  position: absolute;
  top: 87px;
}
.itemIntroduce{
  margin-top: 6px;
  font-size: 15px;
  color: #454545;
  width: 90%;
  line-height: 28px;
  display: -webkit-box;
   word-break: break-all;
   text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}