.container{
  height: 100vh;
  border-top: 1px solid #cdcdcd;
  background: #f0f0f0;
}
.cartsNullView{
  padding-top: 140px;
  width: 100%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.cartsNull{
  width: 38%;
}
.shop{
  background: #ff4c4d;
  width: 120px;
  height: 40px;
  border-radius: 5px;
  color: white;
  font-size: 14px;
  text-align: center;
  line-height: 40px;
  margin-top: 30px;
}
.list{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
}
.item{
  width: 100%;
}
.itemTime{
  width: 100%;
  height: 40px;
  text-align: center;
  line-height: 40px;
  font-size: 10px;
  color: #b5b5b5;
}
.content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border-radius: 2px;
}
.contentTitle{
 border-bottom:1px solid #cdcdcd; 
 font-size: 15px;
 line-height: 45px;
 width: 90%;
 color: #454545;
}
.contentInfoRight{
  margin-left: 10px;
  flex-grow: 2;
}
.contentInfo{
  width: 90%;
  display: flex;
  height: 104px;
  align-items: center;
  
}
.contentInfoImg{
  width: 77px;
  height: 77px;
  border-radius: 4px;
  background: #f0f0f0;
  flex-shrink: 0
}
.shopInfo{
   font-size: 15px;
   display: flex;
   justify-content: space-between;
}
.shopsName{
  width: 177px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.shopsNum{
  font-size: 12px;
  color: #787878;
}
