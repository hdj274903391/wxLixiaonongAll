page{
  background: #f0f0f0;
}
.container{
  width: 100%;
  border-top:1px solid #dcdcdc;
 
}
.tuiJianBanner{
  width: 100%;
  background: #f0f0f0;
  height: 133px;
}
.goodsList{
   background: white;
  width: 100%;
  margin-top: 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10px;
}
.goodsItem{
  margin-top: 10px;
  width: 92%;
 display: flex;
 margin-bottom: 10px;
}
.goodsImg{
 border: 1px solid #f0f0f0;
  border-radius: 5px;
  width: 35%;
  flex-shrink: 0;
}
.goodsInfo{
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: calc(70% - 10px);
}
.goodsName{
  font-size: 15px;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.goodsTitle{
  color: #777777;
  font-size: 12px;
    width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.goodsPrice{
  font-size: 15px;
  color: #ff4c4d;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.buyBtn{
  width: 80px;
  height: 30px;
  background: #ff4c4d;
  border-radius: 2px;
  color: white;
  text-align: center;
  line-height: 30px;
}
.goodsTime{
  font-size: 12px;
  color: #b4b4b4;
}
.goodsInfo>view>view{
  margin-bottom: 5px;
}
.groupPrice{
  text-decoration-line: line-through;
  text-decoration:line-through;
}