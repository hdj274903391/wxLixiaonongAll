page{
  background: #f0f0f0;
}
.container {
  background: #f0f0f0;
}
.navigation{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 10px;
  white-space: nowrap;
  padding-left: 5%;
  font-size: 14px;
  border-bottom: 1px solid #dcdcdc;
  background: white;
  position: fixed;
  width: 100%;
  z-index: 99;
}

.navigation view{

  display: inline-block;
  margin-right: 45px;
  padding-bottom: 5px;
}
.navigation>view:nth-child(1){
  margin-left: 20px;
}
.navigation view:nth-last-child(1){


  margin-right: 60px;

}
.first{
  color: red;
  border-bottom: 2px solid red; 
} 
.content{
  border-top: 6px solid #f0f0f0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.search{
  background: #f0f0f0;
  height: 36px;
  border-radius: 5px;
  width: 94%;
  font-size: 15px;
  display: flex;
  align-items: center;
  margin-top: 10px;
}
.origin{
  width: 20px;
  height: 20px;
  margin-right: 15px;
}
.content>text{
  font-size: 15px;
  padding: 15px;
}

.shopList{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 92%;
}
.shopItem{
  width: 48%;
  margin-bottom: 20px;
  font-size: 0;
}
.shopItem>image{
  width: 100%;
  border-radius: 5px;
  border: 1px solid #f0f0f0;
  height: 143px;
}
.shopTitle{
  width: 162px;
  text-overflow: ellipsis;
  font-size: 15px;
  white-space: nowrap;
  line-height: 20px;
  overflow: hidden;
  margin-top: 10px;
  margin-bottom: 5px;
}
.shopIntroudce{
  font-size: 12px;
  color: #777777;
  margin-top: 3px;
  width: 162px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 16px;
}
.shopPrice{
  font-size: 15px;
  color: red;
  line-height: 20px;
}
.show image{
  width: 360rpx;
  height: 50rpx;
  margin-top:30rpx ;
  margin-bottom: 20rpx;
}

.show{
  width: 100%;
  text-align: center;
  margin: 10px 0;
}