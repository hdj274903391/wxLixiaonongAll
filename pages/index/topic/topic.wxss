.container{
  border-top: 1px solid #f0f0f0;
  padding-bottom: 20px;
}
.bannerImg{
  width: 100%;
  height:350px;
  background: #f0f0f0; 
}
.bannerSwiper{
  width: 100%;
  height: 350px;
}
.otherGoods{
  width: 94%;
  display: flex;
  flex-direction: column;
  margin-top: 20px
}
.otherGoodsItem{
  margin-bottom: 20px;
  border-radius: 5px;
  border: 1px solid #f0f0f0;
  font-size: 0;
}
.otherGoodsImg{
  width: 100%;
  height: 150px;
  background: #f0f0f0;
  overflow: hidden;
}
.otherGoodsItemDetail{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0px 10px;
  height: 50px;
}
.otherGoodsItemInfo{
  font-size: 15px;
}
.otherGoodsItemBtn{
  background: #ff4c4d;
  border-radius: 2px;
  text-align: center;
  color: white;
  width: 80px;
  height: 30px;
  font-size: 12px;
  line-height: 30px;
}
.navigation{
  width: 100%;
  font-size: 15px;
  background: white;
  height: 36px;
}
.navigationPart{
  display: block;
  white-space: nowrap;
  padding-left: 15px;
  height: 36px;
  line-height: 36px;
}
.navigationPart view{
  height: 34px;
  display: inline-block;
  margin-right: 45px;
  line-height: 40px;
}
.navigationPart view:nth-last-child(1){
  margin-right: 60px;
}
.first{
  color: red;
  border-bottom: 2px solid red; 
} 

.shopList{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 92%;
  margin-top: 10px;
 
}
.shopItem{
  width: 48%;
  margin-bottom: 10px;
  font-size: 0px;
  display: flex;
  flex-direction: column;
}
.shopItem>image{
  width: 100%;
  border-radius: 5px;
  height: 165px;
  background: #f0f0f0;
  border: 1px solid #f0f0f0;
}
.shopTitle{
  font-size: 15px;
  white-space: nowrap;
  margin-top: 10px;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 20px;
  display: block;
}
.shopIntroudce{
  margin-top: 5px;
  font-size: 12px;
  color: #777777;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 16px;
}
.shopPrice{
  font-size: 15px;
  color: red;
   margin-top: 5px;
   line-height: 20px;
}
.loadMore{
  width: 100%;
  font-size: 15px;
  color: #b4b4b4;
  text-align: center;
  padding: 10px;
   border-top: 1px solid #f0f0f0;
}
.center{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}
.centerTitle{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #f0f0f0;
  height: 100px;
}
.centerGoodsList{
  width: 94%;
  display: flex;
  flex-wrap: wrap;
}
.centerGoodsItem{
  margin-top: 20px;
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.centerGoodsImg{
  width: 90px;
  height: 90px;
  background: #f0f0f0;
}
.centerGoodsTitle{
  width: 90px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
  color: #474747;

}
.centerGoodsPrice{
  width: 90px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 12px;
  color: #ff4c4d;
   
}